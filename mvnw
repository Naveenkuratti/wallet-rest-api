if [ -z "$MAVEN_SKIP_RC" ]; then
  if [ -f /usr/local/etc/mavenrc ]; then . /usr/local/etc/mavenrc; fi
  if [ -f /etc/mavenrc ]; then . /etc/mavenrc; fi
  if [ -f "$HOME/.mavenrc" ]; then . "$HOME/.mavenrc"; fi
fi

cygwin=false
darwin=false
mingw=false
case "$(uname)" in
  CYGWIN*) cygwin=true ;;
  MINGW*) mingw=true ;;
  Darwin*) darwin=true
    if [ -z "$JAVA_HOME" ]; then
      if [ -x "/usr/libexec/java_home" ]; then
        JAVA_HOME="$(/usr/libexec/java_home)"
        export JAVA_HOME
      else
        JAVA_HOME="/Library/Java/Home"
        export JAVA_HOME
      fi
    fi
    ;;
esac

if [ -z "$JAVA_HOME" ]; then
  if [ -r /etc/gentoo-release ]; then
    JAVA_HOME=$(java-config --jre-home)
  fi
fi

if [ -z "$JAVACMD" ]; then
  if [ -n "$JAVA_HOME" ]; then
    if [ -x "$JAVA_HOME/jre/sh/java" ]; then
      JAVACMD="$JAVA_HOME/jre/sh/java"
    else
      JAVACMD="$JAVA_HOME/bin/java"
    fi
  else
    JAVACMD="$(command -v java 2>/dev/null)"
  fi
fi

if [ ! -x "$JAVACMD" ]; then
  echo "Error: JAVA_HOME is not defined correctly or java not found." >&2
  exit 1
fi

find_maven_basedir() {
  if [ -z "$1" ]; then
    echo "Path not specified to find_maven_basedir" >&2
    return 1
  fi
  basedir="$1"
  wdir="$1"
  while [ "$wdir" != '/' ]; do
    if [ -d "$wdir/.mvn" ]; then
      basedir=$wdir
      break
    fi
    if [ -d "${wdir}" ]; then
      wdir="$(cd "$wdir/.." && pwd)"
    fi
  done
  (cd "$basedir" && pwd)
}

trim() {
  printf "%s" "$1" | tr -d '[:space:]'
}

BASE_DIR=$(find_maven_basedir "$(dirname "$0")")
[ -z "$BASE_DIR" ] && exit 1

MAVEN_PROJECTBASEDIR=${MAVEN_BASEDIR:-"$BASE_DIR"}
export MAVEN_PROJECTBASEDIR

wrapperJarPath="$MAVEN_PROJECTBASEDIR/.mvn/wrapper/maven-wrapper.jar"
if [ ! -r "$wrapperJarPath" ]; then
  wrapperUrl=""
  while IFS="=" read -r key value; do
    case "$key" in wrapperUrl) wrapperUrl=$(trim "$value"); break ;; esac
  done <"$MAVEN_PROJECTBASEDIR/.mvn/wrapper/maven-wrapper.properties"
  if [ -n "$wrapperUrl" ]; then
    if command -v wget >/dev/null; then
      wget -q "$wrapperUrl" -O "$wrapperJarPath" || rm -f "$wrapperJarPath"
    elif command -v curl >/dev/null; then
      curl -sL -o "$wrapperJarPath" "$wrapperUrl" -f || rm -f "$wrapperJarPath"
    fi
  fi
fi

if [ ! -r "$wrapperJarPath" ]; then
  echo "Error: Could not find or download maven-wrapper.jar" >&2
  exit 1
fi

MAVEN_OPTS="${MAVEN_OPTS:-}"
[ -f "$MAVEN_PROJECTBASEDIR/.mvn/jvm.config" ] && MAVEN_OPTS="$(tr -s '\r\n' ' ' <"$MAVEN_PROJECTBASEDIR/.mvn/jvm.config") $MAVEN_OPTS"

MAVEN_CMD_LINE_ARGS="$MAVEN_CONFIG $*"
export MAVEN_CMD_LINE_ARGS

exec "$JAVACMD" \
  $MAVEN_OPTS \
  -classpath "$MAVEN_PROJECTBASEDIR/.mvn/wrapper/maven-wrapper.jar" \
  "-Dmaven.multiModuleProjectDirectory=${MAVEN_PROJECTBASEDIR}" \
  org.apache.maven.wrapper.MavenWrapperMain \
  $MAVEN_CONFIG "$@"
